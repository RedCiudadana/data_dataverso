---
permalink: "conjuntos/index.html"
---
{% extends "src/base.njk" %}

{% block head %}
    <title>Data Verso | Conjuntos de Datos</title>
{% endblock %}

{% block content %}
    <!-- ====== Hero Start ====== -->
    <section class="ud-hero" id="home">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="ud-hero-content wow fadeInUp" data-wow-delay=".2s">
                        <h1 class="ud-hero-title">
                        Conjuntos
                        </h1>
                        <form action="/resultados.html" class="search_bar d-flex justify-content-center">
                            <input style="width: 60%;" search="text" id="searchField" autocomplete="off" placeholder="Buscar conjuntos...">
                            <input style="width: 20%;" class="search_button" type="submit" onclick="passvalues();" value="Buscar" />
                            <i class="lupa fas fa-search"></i>
                        </form>   

                    </div>
                </div>
            </div>
        </div>
    </section>

    <section id="" class="ud-section">
        <div class="container">
            <div class="row align-items-center" id="results">
                {% for conjunto in collections.conjuntos | ordenarAlfabeticamente %}
                <div class="col-lg-6 my-4">
					<div class="cuadro-conjunto">
						<div class="cuadro-conjunto-title">
							<i class="fa-solid fa-database"></i>
							<h4>{{conjunto.data.title}}</h4>
						</div>
						<div class="cuadro-conjunto-body">
							<p>{{conjunto.data.descripcion}}</p>
							<div class="cuadro-conjunto-body-buttons">
								{% if conjunto.data.json %}
								<a href="{{conjunto.data.json}}" download="{{conjunto.data.title | slug}}" class="ud-main-btn">json</a>
								{% endif %}
								{% if conjunto.data.csv %}
								<a href="{{conjunto.data.csv}}" download="{{conjunto.data.title | slug}}" class="ud-main-btn">csv</a>
								{% endif %}
							</div>
							<p>Enlace para uso de api: </p>
							<div class="api-link-container">
								<a href="https://data-dataverso.redciudadana.org{{conjunto.url}}" id="copyLink" class="api-url">
								  https://data-dataverso.redciudadana.org{{conjunto.url}}
								</a>
							</div>
						</div>
					</div>
                </div>
				{% endfor %}
            </div>
        </div>
      </section>

{% endblock %}

{% block body_javascripts %}
{% endblock %} 